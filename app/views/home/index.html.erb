<section class="section-how">
  <div class="container">
    <div class="row">

      <div class="col-md-4">
        <div class="alert alert-success text-center" role="alert">
          <h4> <%= Teacher.count %> Teachers </h4>
        </div>
      </div>
      <div class="col-md-4">
        <div class="alert alert-info text-center" role="alert">
          <h4> <%= Task.count %></span> Ielts Writing Tasks </h4>
        </div>
      </div>
      <div class="col-md-4">
        <div class="alert alert-warning text-center" role="alert">
          <h4> <%= Writing.count %></span> Writings </h4>
        </div>
      </div>

    </div>
  </div>
</section>

<div class="container hr"></div>

<section class="section-teachers">
  <div class="container">
    <h2 class="section-heading">Our Teachers</h2>
    <div class="row">
      <% @teachers.each do |teacher|  %>
        <div class="col-sm-4">
          <div class="block-teacher">
            <%= image_tag avatar_or_default(teacher), class: 'block-teacher-avatar' %>
            <div class="block-teacher-name">
              <%= teacher.name_or_username %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <br>
    <div class="row">
      <div class="mx-auto">
        <%= link_to '<i class="fa fa-th-list"></i> View All'.html_safe, teachers_path, class:"btn btn-primary btn-sm"%>
      </div>
    </div>
  </div>
</section>

<%= render 'layouts/footer' %>
