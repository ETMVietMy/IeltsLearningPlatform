<!-- Page Heading -->
<div class="row">
    <div class="col-sm-8">
        <h1 class="page-header">
            Profile
        </h1>
    </div>
    <div class="col-sm-4 text-right">
      <%= link_to 'Back', :back, class: "btn btn-sm btn-primary" %>
    </div>
</div>
<!-- /.row -->

<!-- Nav tabs -->
<ul class="nav nav-tabs" role="tablist">
<li class="nav-item">
  <a class="nav-link active" data-toggle="tab" href="#account-info" role="tab">Account Info</a>
</li>
<% if current_user.is_teacher? %>
  <li class="nav-item">
    <a class="nav-link" data-toggle="tab" href="#teacher-info" role="tab">Teacher Info</a>
  </li>
<% end %>
<li class="nav-item">
  <a class="nav-link" data-toggle="tab" href="#coins-management" role="tab">Coins Management</a>
</li>
</ul>

<!-- Tab panes -->
<div class="tab-content">
  <div class="tab-pane active" id="account-info" role="tabpanel">
    <br>
    <%= render "account_info"%>
  </div>
  <% if current_user.is_teacher? %>
    <div class="tab-pane" id="teacher-info" role="tabpanel">
      <br>
      <%= render "teacher_info"%>
    </div>
  <% end %>
  <div class="tab-pane" id="coins-management" role="tabpanel">
    <br>
    <%= render "coins_management"%>
  </div>
</div>
