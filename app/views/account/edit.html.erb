<h1>Edit Profile</h1>

<%= form_for(@account, url: account_path) do |f| %>
  <div class="form-group">
    <label>Name</label>
    <%= f.text_field :name, class: 'form-control', placeholder: 'Enter your name' %>
  </div>
  <div class="form-group">
    <%= render 'user_avatar', account: @account %>
    <div class="form-group">
      <%= f.file_field :avatar %>
    </div>
  </div>
  <div class="buttons">
    <button type="submit" class="btn btn-primary">Save</button>
  </div>
<% end %>

