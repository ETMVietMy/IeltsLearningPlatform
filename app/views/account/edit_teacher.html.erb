<h1>Update Teacher Information</h1>

<%= form_for @teacher, url: account_edit_teacher_info_path, html:{class: "form-dashboard"} do |f| %>
  <%= f.hidden_field :user_id %>
  <div class="form-group">
    <label>Experience</label>
    <%= f.text_area :experience, class: "form-control", placeholder: "Enter your experience" %>
  </div>
  <div class="form-group">
    <label>Nationality</label>
    <%= f.text_field :nationality, class: "form-control", placeholder: "Enter your nationality" %>
  </div>
  <div class="form-group">
    <label>Name Your Price</label>
    <%= f.number_field :price, class: "form-control", placeholder: "Your price for one correction" %>
  </div>
  <div class="form-group">
    <label>Linkedin URL</label>
    <%= f.text_field :linkedin, class: "form-control", placeholder: "Enter your linkedin Url" %>
  </div>

  <%= submit_tag "Save", :class => "btn btn-primary" %>
<% end %>
