<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>Sender</th>
            <th>Subject</th>
            <th>Sent at</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
      <% @messages.each do |message| %>
      <%= render "message_row", message: message, sender: message.getSenderEmail %>
      <% end %>
    </tbody>
</table>
