<tr class='clickable-row' data-href="<%= message_path(message) %>">
  <td><%= recipient.username %></td>
  <td><%= message.subject %></td>
  <td><%= message.getSentAt %></td>

  <td>
    <%= link_to '<i class="fa fa-times-circle text-danger" aria-hidden="true"></i>'.html_safe,
              messages_sent_path(id: message.id),
              { data: { confirm: "Are you sure you want to delete this message?" },
              method: :delete, remote: true, class: "delete-button"} %>
  </td>
</tr>
