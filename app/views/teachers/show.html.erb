          <span class="font-bold">Followers</span>
          <span>78</span>
        </li>
      </ul>

      <br>

      <div class="card">
        <div class="card-header">Social Media</div>
        <div class="card-block">
          <i class="fa fa-facebook fa-2x"></i>
          <i class="fa fa-github fa-2x"></i>
          <i class="fa fa-twitter fa-2x"></i>
          <i class="fa fa-pinterest fa-2x"></i>
          <i class="fa fa-google-plus fa-2x"></i>
        </div>
      </div>
    </div>
    <!--/col-3-->

    <!--right col-->
    <div class="col-sm-9">
      <div class="card">
        <div class="card-header"> <%= @teacher.user.username %>'s Experience </div>
        <div class="card-block">
          <%= @teacher.experience %>
        </div>
      </div>
      <br />
      
        <h1 class="hello text-center">Comments</h1>

        <table class="table table-stripped">
        <thead class="thead thead-default">
          <tr>
            <th>Comment</th>
            <th>Sender</th>
            <th>Time</th> 

          </tr>
        </thead>
      <tbody>
      <% @teacher.comments.each do |comment| %>
        <tr>
        <div>
        <blockquote>
          <% if comment.humanized_rating.present? %>
            <b><%= comment.humanized_rating %></b> -
          <% end %>
        
          <td id="message"><strong><%= comment.message %></strong></td>
          <td id = "user"><small><%= comment.user.username %></small></td>
          <td id = "time"><small><%= time_ago_in_words(comment.created_at) %> ago </small></td>
        </blockquote>
      <% end %>
      </div>
      </tr>
  </tbody>
  </table>
