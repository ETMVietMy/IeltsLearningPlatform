  <div class="row">
    <div class="col-sm-9">
      <h1 class=""><%= @teacher.user.username %></h1>
      <button type="button" class="btn btn-success">Book me!</button>  <button type="button" class="btn btn-info">Send me a message</button> 

      <div class="clear"></div>

      <br />
      

    <!-- Button trigger modal -->
<button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
 Add a Comment About Your Teacher
</button>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">Ã—</span>
        </button>
        <h4 class="modal-title" id="myModalLabel">Add a Comment About Your Teacher</h4>
      </div>
      <div class="modal-body">
      <%= simple_form_for @comment, url: teacher_comments_path(@teacher) do |f| %>
      <%= f.input :message %>
      <%= f.input :rating, as: :select, collection: Comment::RATINGS %>
      <%= f.submit "Add a Comment About Your Teacher", class: 'btn btn-primary' %>
      </div>
      <div class="modal-footer">
        
    
      </div>
       <% end %>
    </div>
  </div>
</div>

      <br>
    </div>

    <div class="col-sm-3">
      <a href="/users" class="float-right"><img title="profile image" class="img-circle img-responsive" src="http://www.rlsandbox.com/img/profile.jpg"></a>

    </div>
  </div>



  <br>

  <div class="row">
    <div class="col-sm-3">
      <!--left col-->
      <ul class="list-group">
        <li class="list-group-item text-muted" contenteditable="false">Profile</li>
        <li class="list-group-item justify-content-between">
          <span class="font-bold">Joined</span>
          <span class="">2.13.2014</span>
        </li>
        <li class="list-group-item justify-content-between">
          <span class="font-bold">Real name</span>
          <span>Joseph Doe</span>
        </li>
        <li class="list-group-item justify-content-between">
          <span class="font-bold">Rate</span>
          <i class="fa fa-star"   aria-hidden="true"></i>
          <i class="fa fa-star"   aria-hidden="true"></i>
          <i class="fa fa-star"   aria-hidden="true"></i>
          <i class="fa fa-star"   aria-hidden="true"></i>
          <i class="fa fa-star-o" aria-hidden="true"></i>
        </li>
      </ul>



      <br>

      <div class="card">
        <div class="card-header">
          Website&nbsp;<i class="fa fa-link fa-1x"></i>
        </div>
        <div class="card-block">
          My website.
        </div>
      </div>

      <br>

      <ul class="list-group">
        <li class="list-group-item text-muted">Activity&nbsp;<i class="fa fa-dashboard fa-1x"></i></li>
        <li class="list-group-item justify-content-between">
          <span class="font-bold">Corrections</span>
          <span>125</span>
        </li>
        <li class="list-group-item justify-content-between">
          <span class="font-bold">Students</span>
          <span>50</span>
        </li>
        <li class="list-group-item justify-content-between">
          <span class="font-bold">Posts</span>
          <span>37</span>
        </li>
