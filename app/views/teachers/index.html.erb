<div class="row">
  <div class="col-lg-12">
    <div class="card">
      <!-- <div class="card-header card-default">
        <i class="fa fa-search fa-fw"></i> Filter
      </div> -->
      <div class="card-block">
        <%= form_tag teacher_search_path, remote: true do %>
          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <label>Username</label>
                <%= text_field_tag 'username', '', class: 'form-control' %>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <label>Nationality</label>
                <%= text_field_tag 'nationality', '', class: 'form-control' %>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-sm-2 offset-sm-5">
              <%= submit_tag 'Search', class: 'btn btn-primary btn-sm' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<!-- /.row -->

<div class="row">
  <div class="col-lg-12">
    <!-- <h2>Striped Rows</h2> -->
    <div class="table-responsive"  id="teachers-list">
      <%= render "teachers_table"%>
    </div>
  </div>
</div>
