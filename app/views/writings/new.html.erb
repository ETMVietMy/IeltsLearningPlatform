<h1>Writing Answer</h1>

<%= form_for(@writing, html: {class: 'form-dashboard'}) do |f| %>
  <div class="form-group">
    <label>Question:</label>
    <p><%= @task.description %></p>
  </div>

  <div class="form-group">
    <label>Your Answer:</label>
    <%= f.text_area :answer, rows: 18, class: "form-control" %>
  </div>
  <%= submit_tag "Save Your Answer", class: "btn btn-primary" %>
<% end %>

