<script>
  $('.average-review-rating').raty({
    readOnly: true,
    score: <%= @comment.average_rating %>,
    path: '/assets'
  });

  $('.review-rating').raty({
    score: <%= @comment.rating %>,
    path: '/assets',
    click: function(score, evt) {
      $.ajax({
        url: '/ratings/' + <%= @rating.id %>,
        type: 'PATCH',
        data: { score: score }
      });
    }
  });
</script>